@using NetFlex.DAL.Enums

@model IEnumerable<NetFlex.WEB.ViewModels.RoleViewModel>
@inject NetFlex.BLL.Interfaces.IRoleService _roleManager

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["CurrentPage"] = AdminPages.Roles;
}

<div class="layout">
	<div class="vertical">
		<div class="block">
			<div class="wrapper">
				<div class="topic">Role list</div>
			</div>
		</div>
		<div class="horizontal m-0">
			<div class="block">
				<div class="horizontal m-0">
					<button type="button" class="btn btn-primary m-2"
							data-bs-toggle="modal" data-bs-target="#AddRoleModal">
						Add role
					</button>
				</div>
				<div class="horizontal m-0 justify-content-end">
					<button type="button" class="btn btn-primary m-1">Save</button>
				</div>
			</div>
		</div>
		<div class="block" label="test">
			<table class="table">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>
							<button type="button" class="btn btn-danger m-2" onclick="RemoveRole('@item.Name')">
								Remove
							</button>
						</td>
						<td>
							<button onclick="LoadEditRole('@item.Id')" type="button" class="btn btn-primary m-2"
								data-bs-toggle="modal" data-bs-target="#EditRoleModal">
								Edit
							</button>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div class="modal fade" id="AddRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Add Genre</h5>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form class="input-group mb-3" method="post" asp-action="CreateRole" asp-controller="Admin">
				<div class="modal-body">
					<input name="role" type="text" class="form-control" placeholder="Role" aria-label="Role" aria-describedby="basic-addon1">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button class="btn btn-primary" type="submit">Save changes</button>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="modal fade" id="EditRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Add Genre</h5>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form class="input-group mb-3" id="EditGenreForm">
				<div class="modal-body">
					<input name="genre" value="" id="EditGenreName"
						   type="text" class="form-control" placeholder="Genre"
						   aria-label="Genre" aria-describedby="basic-addon1">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button class="btn btn-primary" type="submit"> Save changes </button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		function RemoveRole(role) {
			$.ajax({
				url: `./RemoveRole?role=${role}`,
				type: "POST",
				success: (data) => {
					window.location.reload();
				},
				error: (error) => {
					console.log(error);
				},
				beforeSend: function (xhr) {
					xhr.setRequestHeader("XSRF-TOKEN",
						$('input:hidden[name="__RequestVerificationToken"]').val());
				}
			});
		}
	</script>
}
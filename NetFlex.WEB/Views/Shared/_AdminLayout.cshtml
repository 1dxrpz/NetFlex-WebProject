<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/NetFlex.WEB.styles.css" asp-append-version="true" />
	<script src="https://kit.fontawesome.com/3ee70c58bc.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="~/css/Admin/Admin.min.css" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<div class="container">
		<main role="main" class="pb-3">
			<div class="wrapper">
				<div class="menu">
					<div class="button">
						<i class="fa-solid fa-chart-line"></i>
						<span>Statistics</span>
					</div>
					<div class="button">
						<i class="fa-brands fa-accessible-icon"></i>
						<span>Users</span>
					</div>
					<hr />
					<div class="button" selected="true">
						<i class="fa-solid fa-circle-dollar-to-slot"></i>
						<span>Subscription plans</span>
					</div>
					<hr />
					<div class="button">
						<i class="fa-solid fa-clapperboard"></i>
						<span>Movies</span>
					</div>
					<div class="button">
						<i class="fa-solid fa-film"></i>
						<span>Series</span>
					</div>
				</div>
				<div class="content">
					@RenderBody()
				</div>
			</div>
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

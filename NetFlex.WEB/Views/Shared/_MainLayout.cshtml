<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="~/css/MainLayout.min.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700;800;900&display=swap" rel="stylesheet">
	@await RenderSectionAsync("Styles", required: false)
</head>


<header>
	<nav class="nav">
		<div class="container-netflex">
			<div class="nav_row">
				<div class="logo-navigation">
					<div class="logo">
						<img src="~/images/Logo.svg" alt="Logo">
					</div>
					<div class="navigation-list">
						<ul>
							<li><a href="">Главная</a></li>
							<li><a href="">Сериалы</a></li>
							<li><a href="">Фильмы</a></li>
							<li><a href="">Новые и популярные</a></li>
							<li><a href="">Мой список</a></li>
						</ul>
					</div>
				</div>
				<div class="actions-list">
					<ul>
						<li>
							<a href=""><img src="~/images/magnifier.svg" alt=""></a>
						</li>
						<li>
							<a href=""><img src="~/images/gift.svg" alt=""></a>
						</li>
						<li>
							<a href=""><img src="~/images/bell.svg" alt=""></a>
						</li>
						<li>
							<a href=""><img src="~/images/settings.svg" alt=""></a>
						</li>
						<li>
							<div class="user">
								<img src="~/images/user.svg" alt="">
								<div class="user-dropdown closed">
									<ul>
										<div class="avatar">
											<a href=""><img src="~/images/user-full.svg" alt=""> </a>
											<text>Nickname</text>
										</div>

										<li>
											<img src="~/images/user-settings.svg" alt="">
											<a href=""><text>Настройки профиля</text></a>
										</li>
										<li>
											<img src="~/images/question.svg" alt="">
											<a href=""><text>Помощь</text></a>
										</li>
										<li>
											<img src="~/images/exit.svg" alt="">
											<a href=""><text>Выйти</text></a>
										</li>
									</ul>
								</div>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</nav>
</header>

@RenderBody();

@await RenderSectionAsync("Scripts", required: false)
<script type="text/javascript">

	let user_dropdown = document.querySelector('.user')
	let user_dropdownmenu = document.querySelector('.user-dropdown')

	user_dropdown.addEventListener('click', (e) => {
	if (user_dropdownmenu.classList.contains('closed')) {
	  user_dropdownmenu.classList.remove('closed')
	  user_dropdown.style.backgroundColor= "rgba(50, 50, 50, 0.9)"
	} else {
	user_dropdownmenu.classList.add('closed')
	user_dropdown.style.backgroundColor= "rgba(0, 0, 0, 0)"
	}
	})

</script>

</html>
